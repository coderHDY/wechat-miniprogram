/* pages/user/user.wxss */
.title-img{
  position: relative;
  width: 100%;
  height: 52vw;
}
.userInfo{
  position: relative;
  height: 20vh;
  width: 80vw;
  margin: 0 auto;
  background-color: #ffffff;
  border: solid 3px rgba(100, 100, 100, 0.6);
  border-radius: 30rpx;
}
.avatar{
  position: absolute;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 20vh;
  height: 20vh;
  border: 5px solid #ffffff;
  border-radius: 50%;
}
.nick-name{
  position: absolute;
  bottom: 30rpx;
  font-size: 35rpx;
  left: 50%;
  transform: translate(-50%);
  color: #fa4b4b;
  text-shadow: 5rpx 5rpx 5rpx rgba(84, 53, 53, 0.6);
}
.options{
  position: relative;
  margin: 20rpx 40rpx;
  border-top: 2rpx solid rgba(100, 100, 100, 0.3);
}
.options-item{
  padding: 10rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid rgba(100, 100, 100, 0.3);
}
.administrator{
  display: flex;
  margin: 20rpx 40rpx;
  padding: 10rpx;
  border: 2px solid rgba(173, 255, 182, 0.6);
  box-shadow: 2px 3px 3px rgba(100, 100, 100, 0.6);
  justify-content: space-around;
}